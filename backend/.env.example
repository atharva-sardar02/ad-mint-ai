# Backend Environment Variables
# Copy this file to .env and update with your actual values
# Never commit .env files to version control

# Database Configuration
# For SQLite (development): sqlite:///./ad_mint_ai.db
# For PostgreSQL (production): postgresql://user:password@host:port/database
DATABASE_URL=sqlite:///./ad_mint_ai.db

# Security Configuration
# Generate a secure secret key for production (e.g., using: openssl rand -hex 32)
SECRET_KEY=change-me-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=30

# External API Keys (Optional - required for video generation features)
# Get your API keys from:
# - OpenAI: https://platform.openai.com/api-keys
# - Replicate: https://replicate.com/account/api-tokens
OPENAI_API_KEY=
REPLICATE_API_TOKEN=

# Application Settings
# Set to true for development, false for production
DEBUG=False

# CORS Configuration
# Comma-separated list of allowed origins
# For production, update with your actual domain(s)
CORS_ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000
